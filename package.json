{
  "name": "freecodecamp-news-theme",
  "description": "The Ghost theme for https://www.freecodecamp.org/news",
  "demo": "https://www.freecodecamp.org/news",
  "version": "0.0.1-alpha.0",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "dev": "gulp",
    "pretest": "gulp build",
    "test": "gscan --verbose .",
    "lint": "npx eslint .",
    "format": "npx eslint . --fix",
    "zip": "gulp zip",
    "version": "npm run lint && npm run test && git add assets",
    "prerelease": "npm run version",
    "release": "np"
  },
  "files": [
    "dist"
  ],
  "np": {
    "yarn": false,
    "contents": "dist",
    "publish": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freeCodeCamp/news-theme.git"
  },
  "bugs": "https://github.com/freeCodeCamp/news-theme/issues",
  "contributors": [
    "https://github.com/freeCodeCamp/news-theme/graphs/contributors"
  ],
  "author": {
    "email": "team@freecodecamp.org",
    "name": "freeCodeCamp.org",
    "url": "https://www.freecodecamp.org"
  },
  "keywords": [
    "ghost-theme"
  ],
  "devDependencies": {
    "@freecodecamp/eslint-config": "^2.0.2",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "beeper": "^2.1.0",
    "cssnano": "^5.0.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "gscan": "^4.0.2",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-livereload": "^4.0.2",
    "gulp-postcss": "^9.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "np": "^7.5.0",
    "postcss": "^8.2.13",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-easy-import": "^3.0.0",
    "prettier": "^2.2.1",
    "pump": "^3.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 25,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
